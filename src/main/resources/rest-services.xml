<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
		http://www.springframework.org/schema/util
		http://www.springframework.org/schema/util/spring-util-4.0.xsd">

	<bean id="customerService"
		class="com.nju.fraborna.o2oprint.service.impl.CustomerServiceImpl">
		<property name="customerDao" ref="customerDao"></property>
	</bean>

	<bean id="merchantAccountService"
		class="com.nju.fraborna.o2oprint.service.impl.MerchantAccountServiceImpl">
		<property name="merchantDao" ref="merchantDao"></property>
		<property name="basicPriceListDao" ref="basicPriceListDao"></property>
	</bean>

	<bean id="merchantOrderService"
		class="com.nju.fraborna.o2oprint.service.impl.MerchantOrderServiceImpl">
		<property name="printingOrderDao" ref="printingOrderDao"></property>
		<property name="customerDao" ref="customerDao"></property>
		<property name="merchantDao" ref="merchantDao"></property>
		<property name="customerAddressDao" ref="customerAddressDao"></property>
	</bean>

	<bean id="printingOrderService"
		class="com.nju.fraborna.o2oprint.service.impl.PrintingOrderServiceImpl">
		<property name="printingOrderDao" ref="printingOrderDao"></property>
	</bean>

	<bean id="customerMerchantService"
		class="com.nju.fraborna.o2oprint.service.impl.CustomerMerchantServiceImpl">
		<property name="merchantDao" ref="merchantDao"></property>
	</bean>

	<bean id="merchantBasicPriceService"
		class="com.nju.fraborna.o2oprint.service.impl.MerchantBasicPriceServiceImpl">
		<property name="basicPriceListDao" ref="basicPriceListDao"></property>
	</bean>
	
	<bean id="tariffService"
		class="com.nju.fraborna.o2oprint.service.impl.TariffServiceImpl">
		<property name="tariffDao" ref="tariffDao"></property>
	</bean>
</beans>
