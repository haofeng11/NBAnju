<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
		http://www.springframework.org/schema/context 
		http://www.springframework.org/schema/context/spring-context-4.0.xsd
		http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd">

	<bean id="accountController"
		class="com.nju.fraborna.o2oprint.controller.customer.AccountController">
		<property name="customerService" ref="customerService"></property>
	</bean>

	<bean id="printingOrderController"
		class="com.nju.fraborna.o2oprint.controller.customer.PrintingOrderController">
		<property name="printingOrderService" ref="printingOrderService"></property>
	</bean>

	<bean id="merchantAccountController"
		class="com.nju.fraborna.o2oprint.controller.merchant.MerchantAccountController">
		<property name="merchantAccountService" ref="merchantAccountService"></property>
		<property name="merchantOrderService" ref="merchantOrderService"></property>
		<property name="merchantBasicPriceService" ref="merchantBasicPriceService"></property>
	</bean>

	<bean id="merchantOrderController"
		class="com.nju.fraborna.o2oprint.controller.merchant.MerchantOrderController">
		<property name="merchantOrderService" ref="merchantOrderService"></property>
	</bean>
	
	<bean id="merchantBasicPriceController"
		class="com.nju.fraborna.o2oprint.controller.merchant.MerchantBasicPriceController">
		<property name="merchantBasicPriceService" ref="merchantBasicPriceService"></property>
	</bean>

	<bean id="customerMerchantController"
		class="com.nju.fraborna.o2oprint.controller.customer.CustomerMerchantController">
		<property name="customerMerchantService" ref="customerMerchantService"></property>
	</bean>

	<bean id="tariffController"
		class="com.nju.fraborna.o2oprint.controller.customer.TariffController">
		<property name="tariffService" ref="tariffService"></property>
	</bean>

</beans>