<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/util
		http://www.springframework.org/schema/util/spring-util-3.0.xsd">

	<bean id="propertyConfigurer"
		class="com.nju.fraborna.o2oprint.utils.CustomizedPropertyConfigurer">
		<property name="locations">
			<list>
				<!-- <value>classpath*:ClientVersion.properties</value> -->
				<!-- <value>classpath*:mongo.properties</value> -->
				<value>classpath*:memcached.properties</value>
				<!-- <value>classpath*:mGameServer.properties</value> -->
			</list>
		</property>
	</bean>

	<bean
		class="org.springframework.beans.factory.annotation.AutowiredAnnotationBeanPostProcessor" />


	<!-- <bean class="com.catpaw.mgame.utils.SpringApplicationContext" id="applicationContext" 
